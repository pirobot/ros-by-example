<launch>

  <!-- Set the name of the map yaml file: can be overridden on the command line. -->
  <arg name="map" default="blank_map.yaml" />

  <!-- Run the map server with the desired map -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find rbx1_nav)/maps/$(arg map)"/>

  <!-- The move_base node -->
  <include file="$(find rbx1_nav)/launch/tb_move_base.launch" />
  
  <!-- Run the TurtleBot AMCL file -->
  <include file="$(find turtlebot_navigation)/config/amcl.launch" />
  
</launch>
